<h1>Your Collections</h1>

<div class="row row-cols-1 row-cols-md-3 g-4 mb-4">
  <% if @collections.any? %>
    <% @collections.each do |collection| %>
      <div class="col">
        <div class="card h-100">
          <div class="card-header">
            <strong><%= collection.name %></strong>
            <span class="badge rounded-pill text-bg-primary"><%= collection.items.count %></span>
          </div>
          <div class="card-body">
            <p class="card-text"><%= collection.description %></p>
            <p class="card-text">Kind: <%= collection.kind %></p>
            <%= link_to "View", collection_path(collection), class: "btn btn-outline-dark", role: "button" %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="col">
      <p>You don't have any collections.</p>
    </div>
  <% end %>
</div>

<div class="d-flex">
  <%= link_to "Add +", new_collection_path, class: "btn btn-success", role: "button" %>
</div>
