<h1><%= @collection.name.titleize %></h1>

<% if @collection.description %>
  <p><%= @collection.description %></p>
<% end %>

<div class="d-flex">
  <%= link_to "Edit Collection", edit_collection_path(@collection), class: "btn btn-primary me-2", role: "button" %>
  <%= button_to "Delete Collection", collection_path(@collection),
              method: :delete,
              data: { confirm: "Are you sure you want to delete this collection?" },
              class: "btn btn-danger", role: "button" %>
</div>
