<div class="container d-flex justify-content-center align-items-center">
  <div class="col-md-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <h1 class="h3 mb-3">Sign up</h1>

      <div class="form-floating">
        <%= f.email_field :email, autocomplete: "email", class: "form-control", id: "floatingEmail", placeholder: "name@example.com" %>
        <%= f.label :email, for: "floatingEmail" %>
      </div>

      <div class="my-3">
        <div class="form-floating">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "floatingPassword", placeholder: "password" %>
          <%= f.label :password, for: "floatingPassword" %>
        </div>

        <div class="form-floating">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "floatingConfirmPassword", placeholder: "password" %>
          <%= f.label :password_confirmation, for: "floatingConfirmPassword" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-primary w-100 py-2" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
