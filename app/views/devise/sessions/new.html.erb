<div class="container d-flex justify-content-center align-items-center">
  <div class="col-md-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h1 class="h3 mb-3">Please sign in</h1>

      <div class="form-floating">
        <%= f.email_field :email, autocomplete: "email", class: "form-control", id: "floatingEmail", placeholder: "name@example.com" %>
        <%= f.label :email, for: "floatingEmail" %>
      </div>

      <div class="form-floating">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "floatingPassword", placeholder: "password" %>
        <%= f.label :password, for: "floatingPassword" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check text-start my-3">
          <%= f.check_box :remember_me, class: "form-check-input", id: "flexCheckDefault" %>
          <%= f.label :remember_me, class: "form-check-label", id: "flexCheckDefault" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Sign in", class: "btn btn-primary w-100 py-2" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
