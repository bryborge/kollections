<div class="container d-flex justify-content-center align-items-center">
  <div class="col-md-4">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <h1 class="h3 mb-3">Forgot your password?</h1>

      <div class="form-floating">
        <%= f.email_field :email, autocomplete: "email", class: "form-control", id: "floatingEmail", placeholder: "name@example.com" %>
        <%= f.label :email, for: "floatingEmail" %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "btn btn-primary w-100 py-2 my-3" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
